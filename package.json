{
    "name": "esbuild-express-dev-server",
    "version": "0.0.12",
    "description": "An express middleware that automatically scans a defined project directory and triggers an ESBuild rebuild when a file inside the directory is detected to be modified.",
    "main": "index.js",
    "types": "index.d.ts",
    "scripts": {
        "export-graphics": "node --loader ts-node/esm ./graphics/export.ts",
        "build": "npx tsc"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/justusip/esbuild-express-dev-server.git"
    },
    "keywords": [
        "esbuild",
        "express",
        "express middleware",
        "dev server",
        "development server",
        "file observer"
    ],
    "author": "Justus Ip",
    "license": "MIT",
    "dependencies": {
        "@types/chokidar": "^2.1.3",
        "@types/express": "^4.17.13",
        "@types/node": "^16.4.7",
        "chokidar": "^3.5.2",
        "esbuild": "^0.12.17",
        "express": "^4.17.1"
    },
    "devDependencies": {
        "esm": "^3.2.25",
        "ts-node": "^10.1.0",
        "typescript": "^4.3.5"
    }
}
